<?xml version="1.0" encoding="UTF-8"?>
<BulkLoader>
	
	<name>AssetList</name>
	<numConnections>5</numConnections>
	<logLevel>10</logLevel>

	<files>
		
		<!-- video definition -->
		<file>
			<id>xml_providers</id>
			<url>{base_path}xml/providers.xml</url>
			<type>xml</type>
		</file>
		
		<!-- media sequencer -->
		<file>
			<id>xml_sequencer</id>
			<url>{base_path}xml/sequencer.xml</url>
			<type>xml</type>
		</file>
		
		<!-- game scene definition -->
		<file>
			<id>xml_scenes</id>
			<url>{base_path}xml/scenes.xml</url>
			<type>xml</type>
		</file>
		<file>
			<id>xml_scenes_mini</id>
			<url>{base_path}xml/scenes_mini.xml</url>
			<type>xml</type>
		</file>
		
		<!-- game (rhyming word) data XML -->
		<file>
			<id>xml_words</id>
			<url>{base_path}xml/words.xml</url>
			<type>xml</type>
		</file>
		
		<!-- interface SWF -->
		<file>
			<id>swf_ui</id>
			<url>{base_path}swf/ui.swf</url>
			<type>movieclip</type>
		</file>
		
		<!-- game UI SWF -->
		<file>
			<id>game_ui</id>
			<url>{base_path}swf/game_ui.swf</url>
			<type>movieclip</type>
		</file>
		
		<!-- sound SWF -->
		<file>
			<id>swf_sound</id>
			<url>{base_path}swf/sound.swf</url>
			<type>movieclip</type>
		</file>
		
	</files>
	
</BulkLoader>